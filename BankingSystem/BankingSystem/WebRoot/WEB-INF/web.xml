<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginAction</servlet-name>
    <servlet-class>com.banking.Action.LoginAction</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>CheckBalanceAction</servlet-name>
    <servlet-class>com.banking.Action.CheckBalanceAction</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DepositAction</servlet-name>
    <servlet-class>com.banking.Action.DepositAction</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>WithdrawAction</servlet-name>
    <servlet-class>com.banking.Action.WithdrawAction</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>TransferAction</servlet-name>
    <servlet-class>com.banking.Action.TransferAction</servlet-class>
  </servlet>





  <servlet-mapping>
    <servlet-name>LoginAction</servlet-name>
    <url-pattern>/LoginAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckBalanceAction</servlet-name>
    <url-pattern>/CheckBalanceAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DepositAction</servlet-name>
    <url-pattern>/DepositAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WithdrawAction</servlet-name>
    <url-pattern>/WithdrawAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TransferAction</servlet-name>
    <url-pattern>/TransferAction</url-pattern>
  </servlet-mapping>

<welcome-file-list>
	<welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>

</web-app>